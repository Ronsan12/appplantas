<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#B42222">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#51C192"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="168dp"
        android:layout_height="33dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:text="Garden Keeper"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="31dp"
        android:layout_height="34dp"
        app:srcCompat="@drawable/icocno"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="11dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="84dp"
        android:text="Cuidados de una planta"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="413dp"
        android:layout_height="297dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="460dp"
        android:text="MÃ¡s videos"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="373dp"
        android:layout_height="162dp"
        android:columnCount="3"
        android:rowCount="2"
        tools:ignore="ExtraText,MissingConstraints"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="503dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="0"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="1"
            tools:srcCompat="@tools:sample/backgrounds/scenic[3]" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="0"
            android:layout_column="2"
            tools:srcCompat="@tools:sample/backgrounds/scenic[9]" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            tools:srcCompat="@tools:sample/backgrounds/scenic[8]" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="1"
            tools:srcCompat="@tools:sample/backgrounds/scenic[11]" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="2"
            tools:srcCompat="@tools:sample/backgrounds/scenic[2]" />

    </GridLayout>

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>